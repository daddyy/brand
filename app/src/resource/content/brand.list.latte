<table class="striped highlight">
    <thead>
        <tr>
            <th><a class="btn blue" href="{$listing->getUriByOrderColumn('brand_id')}">$.brand_id</a></th>
            <th><a class="btn blue" href="{$listing->getUriByOrderColumn('create_date')}">$.create_date</a></th>
            <th>$.content.title</th>
            <th>$.route.path</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        <tr n:foreach="$listing->getItems() as $item">
            <td>{$item->brand_id}</td>
            <td>{$item->create_date|date:'d.m.Y'} / {$item->modify_date|date:'d.m.Y'}</td>
            <td>{$item->getContent()->title}</td>
            <td>{$item->getRoute()->path}</td>
            <td>
                {var $updateForm=$item->getForm('upsert')}
                <a class="waves-effect waves-light btn modal-trigger" href="#modal-{$updateForm->getName()}">$.brand_id</a>
                <div class="modal" id="modal-{$updateForm->getName()}">
                    {var $tmp = $updateForm->getComponent('save')->setAttribute('class', 'waves-effect waves-light btn')}
                    <div class="modal-content">{$updateForm->render()}</div>
                    <div class="modal-footer"></div>
                </div>
                {var $deleteForm=$item->getForm('delete')}
                {var $tmp = $deleteForm->getComponent('save')->setAttribute('class', 'waves-effect waves-light btn red')}
                {$deleteForm->render()}
            </td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5">
            {var $pages=$listing->getPages()}
            <ul class="pagination right">
            {foreach $pages as $page}
                <li class="
                    btn
                    {if $page->disabled}disabled{elseif $page->active}active{else}waves-effect{/if}
                "><a href="{$page->uri}">{$page->page}</a></li>
            {/foreach}
            </ul>
            </td>
        </tr>
    <tfoot>
</table>